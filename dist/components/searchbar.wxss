.searchbar{display:block;width:100%;height:100rpx;position:-webkit-sticky;position:sticky;right:0;left:0;top:0;z-index:10;background-image:url('http://static.keyixing.com/applet/images/bg.jpg');background-color:#ddd4c1}.searchbar:after,.searchbar:before{content:'';position:absolute;left:0;width:100%;height:2rpx;background-color:#b9ae8b}.searchbar:before{top:0}.searchbar:after{bottom:0}.searchbar .container{padding:15rpx;position:relative}.searchbar .wrapper{margin:0;padding:0 70rpx;height:70rpx;line-height:1;position:relative;border:2rpx solid #b9ae8b;border-radius:70rpx;background-color:#fff;transition:all ease 400ms}.searchbar input{min-height:0;height:50rpx;line-height:50rpx;outline:0;border:0;width:100%;margin:12rpx 0 0;padding:0;font-size:32rpx}.searchbar button{margin:0;padding:0;width:70rpx;height:70rpx;line-height:1;display:flex;align-items:center;justify-content:center;background-color:transparent;font-size:40rpx;position:absolute;left:5rpx;top:0;z-index:10;transition:all ease .4s}.searchbar button:after{display:none;transform:none;box-shadow:none}.searchbar button.cancel{width:100rpx;left:200%;font-size:32rpx}.searchbar.inputing .wrapper{margin-right:100rpx}.searchbar.inputing .cancel{left:100%}