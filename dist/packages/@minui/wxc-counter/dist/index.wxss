.counter {
    display: flex;
    background-color: #e1dacf;
}
.counter__number {
    height: 54rpx;
    overflow: hidden;
    box-sizing: border-box;
    border: 1rpx solid #b6aea1;
    -webkit-border-radius: 4rpx;
    border-radius: 4rpx
}
.counter__modify {
    display: inline-block;
    height: 52rpx;
    line-height: 52rpx;
    text-align: center;
    vertical-align: top;
    color: #ff5777;
    font-size:0;
    padding:0;
    background:none
}
.counter__opt {
    width: 52rpx;
    background-color: #d2c7b5;
    color: #9e968a;
}
.counter__text {
    min-width: 80rpx;
    border-left: 1rpx solid #b6aea1;
    border-right: 1rpx solid #b6aea1;
    color: #e95608;
    font-size: 30rpx;
    box-sizing:border-box;
    padding: 0 6rpx
}
.counter__no {
    color: #b6aea1
}
.counter__icon{
    font-weight: 700;
}
